<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.BenchmarkDataMapper">

    <select id="BenchmarkDataAll" resultType="com.itheima.model.BenchmarkData">
        select * from benchmarkdata
    </select>

    <update id="BenchmarkDataUpdate" parameterType="com.itheima.model.BenchmarkData">
        update benchmarkdata set

        <if test="kangMingId != null and kangMingId != ''">
            kangMingId=#{kangMingId},
        </if>
        <if test="packingStandard != null and packingStandard != ''">
            packingStandard=#{packingStandard},
        </if>
        <if test="grossWeightOfEachBox != null and grossWeightOfEachBox != ''">
            grossWeightOfEachBox=#{grossWeightOfEachBox},
        </if>
        <if test="tankSize != null and tankSize != ''">
            tankSize=#{tankSize},
        </if>
        <if test="aStandardCardBoardBox != null and aStandardCardBoardBox != ''">
            aStandardCardBoardBox=#{aStandardCardBoardBox},
        </if>
        <if test="aStandardCardBoardLongWide != null and aStandardCardBoardLongWide != ''">
            aStandardCardBoardLongWide=#{aStandardCardBoardLongWide},
        </if>
        <if test="instructions != null and instructions != ''">
            instructions=#{instructions},
        </if>
        benchmarkDataVersionNumber =(#{benchmarkDataVersionNumber}+1)
        where id = #{id}
    </update>


    <delete id="BenchmarkDataDelete" parameterType="int">
        delete  from benchmarkdata where id = #{id}
    </delete>


    <insert id="BenchmarkDataInsert" parameterType="com.itheima.model.BenchmarkData">
        insert into benchmarkdata
        (kangMingId,packingStandard,grossWeightOfEachBox,tankSize,aStandardCardBoardBox,aStandardCardBoardLongWide,instructions)
        values
        (#{kangMingId},#{packingStandard},#{grossWeightOfEachBox},#{tankSize},#{aStandardCardBoardBox},#{aStandardCardBoardLongWide},#{instructions})
    </insert>

    <select id="BenchmarkDataOne" parameterType="int" resultType="com.itheima.model.BenchmarkData">
        select * from benchmarkdata where id = #{id}
    </select>


</mapper>